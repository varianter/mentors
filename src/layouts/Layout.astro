---
export interface Props {
  title: string;
  class?: string;
}

const props = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="min-h-screen">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png+xml" href="/favicon.png" />
    <link rel="stylesheet" href="/style.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{props.title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Gloock&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="min-h-screen flex justify-center bg-gradient-to-br transition from-[#F1EDDF] to-[#EDE8D7]"
  >
    <main class={`flex max-w-[75rem] w-full  ${props.class}`}>
      <div class="w-full">
        <div class="font-gloock text-4xl font-bold text-center my-4 block">
          <a href="/"
            ><img
              src="/variant-bw.svg"
              class="block max-w-[4rem] m-auto"
              alt="Variant Mentoring"
            /></a
          >
        </div>

        <slot />
      </div>
    </main>
  </body>
</html>
