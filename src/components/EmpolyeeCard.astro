---
import { Picture } from "@astrojs/image/components";
import type { AstroComponentFactory } from "astro/dist/runtime/server";
import { getEmployee } from "../data";

export interface Props {
  email: string;
  tags: string[];
  Content: AstroComponentFactory;
}

const { email, Content, tags } = Astro.props;
const employee = await getEmployee(email);
---

{
  employee && (
    <div class="font-sans w-full flex flex-row justify-center pt-20">
      <div class="card  max-w-96 mx-auto bg-white flex flex-col shadow-xl hover:shadow">
        <Picture
          src={employee.imageUrl}
          alt={employee.name}
          widths={[200]}
          aspectRatio="1:1"
          formats={["avif", "png"]}
          class="w-32 mx-auto rounded-full -mt-20 border-8 border-white bg-white"
        />
        <div class="text-center mt-2 text-3xl font-medium">{employee.name}</div>
        <div class="text-center mt-2 font-light text-sm">
          <a href={`mailto:${email}`}>{email}</a>
        </div>
        <div class="px-6 mt-2 font-light text-sm flex-1">
          <Content />
        </div>
        <hr class="mt-8" />
        <div class="flex p-4 flex-wrap gap-1">
          {tags.map(tag => (
            <a
              href={`/tags/${tag}`}
              class="py-2 px-4 shadow-md no-underline text-white rounded-full bg-blue-600 font-sans font-semibold text-sm border-blue">
              {tag}
            </a>
          ))}
        </div>
      </div>
    </div>
  )
}
